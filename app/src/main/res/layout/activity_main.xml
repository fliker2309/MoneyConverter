<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fromCurrentFlagBtn"
        android:layout_width="@dimen/flag_fab_size"
        android:layout_height="@dimen/flag_fab_size"
        android:layout_marginStart="@dimen/flag_margin_size"
        android:layout_marginTop="@dimen/flag_margin_size"
        app:fabCustomSize="@dimen/flag_margin_size"
        android:src="@drawable/ic_belarus"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/toCurrentFlagBtn"
        app:fabCustomSize="@dimen/flag_margin_size"
        android:layout_width="@dimen/flag_fab_size"
        android:layout_height="@dimen/flag_fab_size"
        android:layout_marginStart="@dimen/flag_margin_size"
        android:layout_marginTop="@dimen/flag_margin_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fromCurrentFlagBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>


   